{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "**/.env.*local",
    "**/tsconfig*.json",
    "internal/node-utils/*.json",
    "internal/node-utils/src/**/*.ts",
    "internal/vite-config/*.json",
    "internal/vite-config/src/**/*.ts",
    "internal/tailwind-config/src/**/*.ts"
  ],
  "globalEnv": ["NODE_ENV"],
  "tasks": { 
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": [],
      "dependsOn": []
    },
    "typecheck": {
      "outputs": []
    }
  }
}
